{
  "compilerOptions": {
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "stripInternal": true,
    "declaration": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
